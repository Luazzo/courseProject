{% extends 'partials/layout-annuaire.html.twig' %}

{% block title %}Provider{% endblock %}

{% block header_bottom %}
{% include "partials/header.html.twig" %}
{% endblock %}

{% block main %}

    <h1>Course</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ course.price }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ course.info }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if course.start %}{{ course.start|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Finish</th>
                <td>{% if course.finish %}{{ course.finish|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Displaystart</th>
                <td>{% if course.displayStart %}{{ course.displayStart|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Displayfinish</th>
                <td>{% if course.displayFinish %}{{ course.displayFinish|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('course_edit', { 'slug': course.slug }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
