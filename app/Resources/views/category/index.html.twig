{% extends 'Annuaire/layout-annuaire.html.twig' %}

{% block title %}Categories{% endblock %}

{% block header_bottom %}
    {% include "Annuaire/header.html.twig" %}
{% endblock %}

{% block main %}
    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">



                    <div class="col-sm-8 col-lg-9">
                        <div class="content">
                            <div class="page-title">
                                <h1>List of Categories</h1>
                            </div><!-- /.page-title -->

                            <div class="posts">
                                {% for category in categories %}
                                    <div class="post post-boxed">
                                        <div class="post-image">
                                            <img src="/img/tmp/product-11.jpg" alt="A Clockwork Origin">
                                            <a class="read-more" href="{{ path('category_show', { 'id': category.id }) }}">View</a>
                                        </div><!-- /.post-image -->

                                        <div class="post-content">
                                            <h2><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.name }}<a></h2>
                                            <p>{{ category.description }}</p>
                                        </div><!-- /.post-content -->

                                        <div class="post-meta clearfix">
                                            <div class="post-meta-categories"></i> <a href="blog-detail.html">Promotions</a></div><!-- /.post-meta-categories -->
                                            <div class="post-meta-comments"></i> <a href="blog-detail.html">Courses</a></div><!-- /.post-meta-comments -->
                                            <div class="post-meta-more"><a href="{{ path('category_show', { 'id': category.id }) }}">Read More <i class="fa fa-chevron-right"></i></a></div><!-- /.post-meta-more -->
                                        </div><!-- /.post-meta -->
                                    </div><!-- /.post -->
                                {% endfor %}
                            </div><!-- /.posts -->


                            <div class="navigation">
                                {{ knp_pagination_render(categories) }}
                            </div><!-- /.pagination -->


                        </div><!-- /.content -->
                    </div><!-- /.col-* -->

                    <div class="col-sm-4 col-lg-3">
                        <div class="sidebar">
                            <div class="widget">
                                <h2 class="widgettitle-30lineheight">Recent Promotions</h2>

                                {#{% if promotions is iterable  %} -  NE MARCHE PAS #}
                                {% if promotions|length == 0 %}
                                    <div class="cards-small">
                                        <h3>No Promotions</h3>
                                    </div><!-- /.cards-small -->
                                {% else %}
                                    {% for promotion in promotions | slice (0,5) %}
                                        {% include "promotion/cards-small.html.twig" %}
                                    {% endfor %}
                                {% endif %}

                            </div><!-- /.widget -->


                            {% include ":search:filter.html.twig" %}


                            <div class="widget">
                                <h2 class="widgettitle-30lineheight">Recent Courses</h2>

                                {#{% if promotions is iterable  %} -  NE MARCHE PAS #}
                                {% if courses|length == 0 %}
                                    <div class="cards-small">
                                        <h3>No Courses in this category</h3>
                                    </div><!-- /.cards-small -->
                                {% else %}
                                    {% for course in courses | slice (0,5) %}
                                        {% include "course/cards-small-course.html.twig" %}
                                    {% endfor %}
                                {% endif %}
                            </div><!-- /.widget -->




                            <div class="widget">
                                <h2 class="widgettitle">Archives</h2>

                                <ul class="menu">
                                    <li><a href="#">August <strong class="pull-right">12</strong></a></li>
                                    <li><a href="#">July <strong class="pull-right">23</strong></a></li>
                                    <li><a href="#">June <strong class="pull-right">53</strong></a></li>
                                </ul><!-- /.menu -->
                            </div><!-- /.wifget -->

                        </div><!-- /.sidebar -->
                    </div><!-- /.col-* -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->





{% endblock %}


{% block page_end %}

{% endblock %}
