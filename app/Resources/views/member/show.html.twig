{% extends 'Annuaire/layout-annuaire.html.twig' %}

{% block title %}Member{% endblock %}

{% block header_bottom %}
    {% include "Partials/header.html.twig" %}
{% endblock %}

{% block main %}
    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-lg-3">
                        <div class="sidebar">
                            <div class="widget">
                                <div class="user-photo">
                                    <a href="#">
                                        <img src="/img/tmp/agent-2.jpg" alt="User Photo">
                                    </a>
                                </div><!-- /.user-photo -->
                            </div><!-- /.widget -->

                            <div class="widget">
                                <ul class="menu-advanced">
                                    <h2 class="widgettitle">Add yours blocks</h2>
                                    <select>
                                        <option value="promos">5 new Promos</option>
                                        <option value="courses">5 new Courses</option>
                                        <option value="providers">5 new Providers</option>
                                        <option value="category">Category of Month</option>
                                    </select>
                                </ul>
                            </div><!-- /.widget -->


                            <div class="widget">
                                <ul class="menu-advanced">
                                    <li><a href="listing-submit.html"><i class="fa fa-pencil"></i> Submit Listing</a></li>
                                    <li class="active"><a href="#"><i class="fa fa-user"></i> Edit Profile</a></li>
                                    <li><a href="#"><i class="fa fa-key"></i> Password</a></li>
                                    <li><a href="#"><i class="fa fa-sign-out"></i> Logout</a></li>
                                </ul>
                            </div><!-- /.widget -->


                        </div><!-- /.sidebar -->
                    </div><!-- /.col-* -->

                    <div class="col-sm-8 col-lg-9">
                        <div class="content">
                            <div class="page-title-mb0">
                                <h1>{{ member.name }} {{ member.firstname }}</h1>
                                <p>{{ member.town.town }}</p>
                            </div><!-- /.page-title -->


                            <div class="posts post-detail">
                                <div class="post-meta-tags clearfix">
                                    Members's Favorites:
                                    {% if (member.favorites | length) > 0 %}
                                        <ul>
                                            {% for fav in member.favorites %}
                                                <li class="tag"><a href="">{{ fav.provider.name }} {{ fav.provider.firstname }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        No favorites
                                    {% endif %}
                                </div><!-- /.post-meta -->
                            </div><!-- /.post -->

                            <hr class="hr-mt10-mb10">

                            {% include "Partials/form-search-horizon.html.twig" %}


                        </div><!-- /.content -->
                    </div><!-- /.col-* -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->

{% endblock %}


{% block page_end %}
    <script src="{{ asset ('js/main.js')}}" type="text/javascript"></script>
{% endblock %}