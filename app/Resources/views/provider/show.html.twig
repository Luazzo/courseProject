{% extends 'base.html.twig' %}

{% block body %}
    <h1>Provider</h1>

    <table>
        <tbody>
            <tr>
                <th>Company</th>
                <td>{{ provider.company }}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{ provider.site }}</td>
            </tr>
            <tr>
                <th>Emailcompany</th>
                <td>{{ provider.emailCompany }}</td>
            </tr>
            <tr>
                <th>Telcompany</th>
                <td>{{ provider.telCompany }}</td>
            </tr>
            <tr>
                <th>Tva</th>
                <td>{{ provider.tva }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ provider.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ provider.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ provider.firstName }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ provider.role }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ provider.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ provider.password }}</td>
            </tr>
            <tr>
                <th>Addressnumber</th>
                <td>{{ provider.addressNumber }}</td>
            </tr>
            <tr>
                <th>Addressstreet</th>
                <td>{{ provider.addressStreet }}</td>
            </tr>
            <tr>
                <th>Registration</th>
                <td>{% if provider.registration %}{{ provider.registration|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Attempts</th>
                <td>{{ provider.attempts }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{% if provider.enable %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Confirmreg</th>
                <td>{% if provider.confirmReg %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('provider_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('provider_edit', { 'id': provider.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
